<%= form_for(current_user.borrowings.find_by(user_id: current_user.id, book_id: current_book.id), html: { method: :patch }, remote: true) do |f| %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :book_id, current_book.id %>
  <%= f.label :borrow_more %> (days)
  <input type="text" name="extension_day">
  <%= f.submit "Extend", class: "btn" %>
<% end %>