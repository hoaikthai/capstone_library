<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %><br>
        <%= @user.email %><br>
        <%= @user.birthday unless @user.birthday.nil? %><br>
        <%= @user.address unless @user.address.nil? %><br>
      </h1>
    </section>
  </aside>
</div>